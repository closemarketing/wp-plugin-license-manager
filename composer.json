{
	"name": "closemarketing/wp-plugin-license-manager",
	"description": "WordPress Plugin License Manager Library - A reusable library for managing WordPress plugin licenses with Enwikuna License Manager",
	"type": "library",
	"keywords": [
		"wordpress",
		"license",
		"plugin",
		"enwikuna",
		"license-manager",
		"updates"
	],
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "David Perez",
			"email": "david@closemarketing.es",
			"homepage": "https://close.marketing",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.10",
		"wp-coding-standards/wpcs": "^3.0",
		"phpcompatibility/phpcompatibility-wp": "*",
		"yoast/phpunit-polyfills": "^1.0",
		"wp-phpunit/wp-phpunit": "^6.3"
	},
	"autoload": {
		"psr-4": {
			"Closemarketing\\WPLicenseManager\\": "src/"
		},
		"files": []
	},
	"minimum-stability": "stable",
	"prefer-stable": true,
	"scripts": {
		"test": "phpunit",
		"test-debug": "XDEBUG_MODE=debug XDEBUG_TRIGGER=1 phpunit",
		"test-install": "bash bin/install-wp-tests.sh wordpress_test root 'root' 127.0.0.1 latest"
	},
	"support": {
		"issues": "https://github.com/closemarketing/wp-plugin-license-manager/issues",
		"source": "https://github.com/closemarketing/wp-plugin-license-manager"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
